                    </Grid>

                </Viewbox>-->

            </Grid>

            <Grid Grid.Column="2">

                <StackPanel Margin="{StaticResource BigThickness}">

                    <Grid Margin="0,0,0,9">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">

                            <TextBlock Style="{StaticResource Header1}" Text="Waves"/>

                        </Grid>

                        <Grid Grid.Column="2">

                            <TextBlock Style="{StaticResource Header1}" Text="(Framework for .NET)" Foreground="{DynamicResource Primary-Foreground-900-Brush}"/>

