                                        <Grid Grid.Column="0">

                                            <TextBlock Text="HResult:" Style="{StaticResource Hint1}"/>

                                        </Grid>

                                        <Grid Grid.Column="2">

                                            <TextBlock Text="{Binding Exception.HResult}" Style="{StaticResource Hint1}"/>

                                        </Grid>

                                    </Grid>

                                    

                                </StackPanel>

                            </Grid>

                        </Grid>

                    </StackPanel>

                </Grid>

            </Grid>

        </Grid>

