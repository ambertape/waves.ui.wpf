    <!-- Общий стиль иконки директории. -->
    <Style x:Key="DirectoryPathStyle" TargetType="{x:Type Path}">

        <Setter Property="Data" Value="{DynamicResource Icon-Folder}" />

        <Style.Triggers>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.Directory}">
                <Setter Property="Data" Value="{DynamicResource Icon-Folder}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.HardDrive}">
                <Setter Property="Data" Value="{DynamicResource Icon-Hard-Drive}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.NetworkDirectory}">
                <Setter Property="Data" Value="{DynamicResource Icon-Network-Folder}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.OpticalDrive}">
                <Setter Property="Data" Value="{DynamicResource Icon-Optical-Drive}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.Ram}">
                <Setter Property="Data" Value="{DynamicResource Icon-Ram}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.Removable}">
                <Setter Property="Data" Value="{DynamicResource Icon-Removable-Drive}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.Unknown}">
                <Setter Property="Data" Value="{DynamicResource Icon-Help}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.NoRootDirectory}">
                <Setter Property="Data" Value="{DynamicResource Icon-Home}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.Desktop}">
                <Setter Property="Data" Value="{DynamicResource Icon-Desktop}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.Computer}">
                <Setter Property="Data" Value="{DynamicResource Icon-Pc}" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                         Value="{x:Static enums:DirectoryType.User}">
                <Setter Property="Data" Value="{DynamicResource Icon-User-Folder}" />
            </DataTrigger>

        </Style.Triggers>

    </Style>

