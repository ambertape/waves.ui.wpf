<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:interfaces="clr-namespace:Fluid.UI.Windows.Presentation.ModalityWindows.Interfaces"
                    xmlns:helpers="clr-namespace:Fluid.UI.Windows.Helpers">

    <ResourceDictionary.MergedDictionaries>

        <!-- Button. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows;component/Styles/Button.xaml" />

        <!-- Converters. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows;component/Converters/Converters.xaml" />

        <!-- Icons. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows.Resources;component/Icons.xaml" />

        <!-- Padding. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows;component/Styles/Padding.xaml" />

        <!-- Text. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows;component/Styles/Text.xaml" />

        <!-- Opacity. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows;component/Styles/Opacity.xaml" />

        <!-- Actions. -->
        <ResourceDictionary Source="pack://application:,,,/Fluid.UI.Windows;component/Templates/ModalityWindowAction.xaml" />

    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="ModalityWindowDataTemplate" DataType="{x:Type interfaces:IModalityWindowPresentation}">

        <Grid VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Margin="{StaticResource BigThickness}">

            <Grid.Effect>

                <DropShadowEffect Color="{DynamicResource Primary-Foreground-Color-100}"
                                  Opacity="0.5"
                                  BlurRadius="12"
                                  ShadowDepth="2"
                                  Direction="-75" />

            </Grid.Effect>

            <Grid MaxWidth="{Binding MaxWidth, UpdateSourceTrigger=PropertyChanged}"
                  MaxHeight="{Binding MaxHeight, UpdateSourceTrigger=PropertyChanged}">

