<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TODO: проработать вопрос анимаций. -->

    <!-- Анимация появления -->
    <Storyboard x:Key="FadeInAnimationStoryboard">

        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Duration="0:0:0.2">

            <SplineDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
            <SplineDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>

        </DoubleAnimationUsingKeyFrames>

    </Storyboard>

    <!-- Анимация исчезновения -->
    <Storyboard x:Key="FadeOutAnimationStoryboard">

        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" Duration="0:0:0.2">

            <SplineDoubleKeyFrame KeyTime="0:0:0.0" Value="1"/>
            <SplineDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>

        </DoubleAnimationUsingKeyFrames>

    </Storyboard>

</ResourceDictionary>