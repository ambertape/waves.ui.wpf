<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:interfaces="clr-namespace:Fluid.UI.Windows.Services.Interfaces;assembly=Fluid.UI.Windows.Services.Interfaces"
                    xmlns:base="clr-namespace:Fluid.UI.Windows.Converters.Base;assembly=Fluid.UI.Windows.Converters">

    <base:FluidColorToSolidColorBrushConverter x:Key="FluidColorToSolidColorBrushConverter"/>

    <DataTemplate x:Key="ThemeComboBoxDataTemplate" DataType="{x:Type interfaces:ITheme}">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="9"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Ellipse Fill="{Binding PrimaryExampleColor, Converter={StaticResource FluidColorToSolidColorBrushConverter}}"
                         Height="16" Width="16"/>

                <Ellipse Stroke="{DynamicResource Primary-Foreground-100-Brush}" Opacity="{DynamicResource Opacity8}"
                         StrokeThickness="1"
                         Height="16" Width="16"/>

            </Grid>

            <Grid Grid.Column="2">

                <Ellipse Fill="{Binding AccentExampleColor, Converter={StaticResource FluidColorToSolidColorBrushConverter}}"
                         Height="16" Width="16"/>

                <Ellipse Stroke="{DynamicResource Primary-Foreground-100-Brush}" Opacity="{DynamicResource Opacity8}"
                         StrokeThickness="1"
                         Height="16" Width="16"/>

            </Grid>

            <Grid Grid.Column="4">

                <TextBlock Style="{DynamicResource Regular2}" 
                           Text="{Binding Name}"
                           Foreground="{Binding Path=(TextElement.Foreground), RelativeSource={RelativeSource AncestorType={x:Type UIElement}}}"/>

            </Grid>

        </Grid>

    </DataTemplate>

</ResourceDictionary>